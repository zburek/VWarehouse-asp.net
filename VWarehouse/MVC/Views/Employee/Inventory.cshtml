</table>

<table class="table">
        <tr>
            <td width="300"></td>
            <td>
                @Html.ActionLink("Return All Vehicles", "ReturnAllVehicles", new { empID = Model.ID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
</table>

<p>&nbsp;</p>
<p></p>

<div class="row">
    <div class="col-md-2">
        <a href="@Url.Action("Index")"
           class="btn btn-default">
            <span class="glyphicon glyphicon-list-alt"></span> Back to List
        </a>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-2">
        @Html.ActionLink("Return All", "ReturnAllInventory", new { empID = Model.ID }, new { @class = "btn btn-danger" })
    </div>
</div>
